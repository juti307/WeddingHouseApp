@page
@model WeddingHouseApp.Pages.Kontakty.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Kontakt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Kontakt.KontaktID" />
            <div class="form-group">
                <label asp-for="Kontakt.Adres_email" class="control-label"></label>
                <input asp-for="Kontakt.Adres_email" class="form-control" />
                <span asp-validation-for="Kontakt.Adres_email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kontakt.Nr_telefonu" class="control-label"></label>
                <input asp-for="Kontakt.Nr_telefonu" class="form-control" />
                <span asp-validation-for="Kontakt.Nr_telefonu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kontakt.Osoba_personaliaID" class="control-label"></label>
                <select asp-for="Kontakt.Osoba_personaliaID" class="form-control" asp-items="ViewBag.Osoba_personaliaID"></select>
                <span asp-validation-for="Kontakt.Osoba_personaliaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kontakt.Adres_korespondencyjnyID" class="control-label"></label>
                <select asp-for="Kontakt.Adres_korespondencyjnyID" class="form-control" asp-items="ViewBag.Adres_korespondencyjnyID"></select>
                <span asp-validation-for="Kontakt.Adres_korespondencyjnyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
