@page
@model WeddingHouseApp.Pages.Clients.IndexModel

@{
    ViewData["Title"] = "Clients";
}

<h1>List of Clients</h1>

<p>
    <a asp-page="Create">Add a new client</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Osoba_personalia[0].Imie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Osoba_personalia[0].Drugie_imie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Osoba_personalia[0].Nazwisko)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dokument[0].Rodzaj_dokumentu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dokument[0].Seria_numer_dokumentu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Osoba_personalia) {
    
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Imie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Drugie_imie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Dokument[Model.Dokument.FindIndex(a => a.Osoba_personaliaForeignKey == item.Osoba_personaliaId)].Rodzaj_dokumentu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Dokument[Model.Dokument.FindIndex(a => a.Osoba_personaliaForeignKey == item.Osoba_personaliaId)].Seria_numer_dokumentu)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Osoba_personaliaId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Osoba_personaliaId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Osoba_personaliaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
